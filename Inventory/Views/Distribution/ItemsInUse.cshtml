                            $('#GroupID').append('<option value=' + d.Value + '>' + d.Text + '</option>');
                            if(data.length == i+1){
                                var index =  $('#item_form [name=index]').val();
                                if(data.length == i+1 && groupId){
                                    $('#GroupID').val(groupId);
