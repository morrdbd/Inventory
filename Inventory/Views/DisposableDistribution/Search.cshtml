            if($(this).hasClass('selectedItem')){
                $(this).removeClass('selectedItem');
            } else {
            $(this).addClass('selectedItem').siblings().removeClass('selectedItem');
            }
            let id = $(this).find('a').data().id;
            if(id){
                window.location.href = `@Url.Action("ViewItemInUse", "ReusableDistribution")/`+id;
            }
        });*@
        $("#GroupID").change(function(){
            var groupId = $("#GroupID").val();
            $('#CategoryID').empty();
            if (groupId) {
                $.ajax({
                    type: "post",
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    url: '@Url.Action("FilteredLookupAjax", "LookupHelper")', // URL to fetch second ddl
                    data: "{id:'" + groupId + "'}",
                    success: function (data) {
                        $('#CategoryID').append('<option selected="selected" value="">'+"@Labels.please_select"+'</option>');
                        $.each(data, function (i, d) {
                            $('#CategoryID').append('<option value=' + d.Value + '>' + d.Text + '</option>');
                        });
                    },
                    failure: function (data) {
                        alert('error occured');
                    },
                    complete: function(data) {

                    }
                });
            }
        });
    })
</script>
}


