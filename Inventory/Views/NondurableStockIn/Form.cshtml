@model Inventory.Models.ViewModels.NondurableStockInVM

@{
    ViewBag.Title = Labels.ReceiptReport;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var _user = ViewBag.AppUser as Inventory.Models.ViewModels.UserWithRole;
    string model_json = Newtonsoft.Json.JsonConvert.SerializeObject(Model);
    var _ImageRequired = Model.StockInID == 0 ? "required" : "";
}

<form action="@Url.Action(Model.StockInID == 0 ? "Insert" : "Update")" id="main_form" method="post" autocomplete="off" enctype="multipart/form-data">
    <input type="hidden" name="StockInID" id="StockInID" value="@Model.StockInID" />
    <div class="portlet box blue-hoki margin-bottom-10">
        <div class="portlet-title">
            <div class="caption">
                @Labels.ReceiptReportInfo
            </div>
        </div>
        <div class="portlet-body">
            <section class="row">
                <div class="col-md-6 form-group">
                    <label>@Labels.ReportNumber</label>
                    <div class="col-md-8">
                        <input type="text" name="M7Number" id="M7Number" value="@Model.M7Number" class="form-control input-sm" required data-msg="" placeholder="">
                    </div>
                </div>
                <div class="col-md-6 form-group">
                    <label>@Labels.ReceiptDate</label>
                    <div class="col-md-8">
                        <input type="text" name="StockInDateForm" id="StockInDateForm" value="@Model.StockInDateForm" class="form-control input-sm shpicker_f" required data-msg="" placeholder="">
                    </div>
                </div>
            </section>
            <section class="row">
                <div class="col-md-6 form-group">
                    <label>Contractor Name</label>
                    <div class="col-md-8">
                        <input type="text" name="ContractorName" id="ContractorName" value="@Model.ContractorName" class="form-control input-sm" required data-msg="" placeholder="">
                    </div>
                </div>
                <div class="col-md-6 form-group">
                    <label>@Labels.DeliveryPlace</label>
                    <div class="col-md-8">
                        <input type="text" name="DeliveryPlace" id="DeliveryPlace" value="@Model.DeliveryPlace" class="form-control input-sm" required data-msg="" placeholder="">
                    </div>
                </div>
            </section>
            <section class="row">
                <div class="col-md-6 form-group">
                    <label>@Labels.SuggestionBillNumber</label>
                    <div class="col-md-8">
                        <input type="text" name="OrderNumber" id="OrderNumber" value="@Model.OrderNumber" class="form-control input-sm" required data-msg="" placeholder="">
                    </div>
                </div>
                <div class="col-md-6 form-group">
                    <label>@Labels.Mem3Date</label>
                    <div class="col-md-8">
                        <input type="text" name="OrderDateForm" id="OrderDateForm" value="@Model.OrderDateForm" class="form-control input-sm shpicker_f" required data-msg="" placeholder="">
                    </div>
                </div>
            </section>
            <section class="row">
                <div class="col-md-6 form-group">
                    <label>@Labels.Attachment</label>
                    <div class="col-md-8">
                        <input type="file" id="FileContent" name="FileContent" @_ImageRequired accept="image/*,.pdf" />
                    </div>
                </div>
            </section>
        </div>
    </div>

    <div class="portlet box blue-hoki margin-bottom-10">
        <div class="portlet-title">
            <div class="caption">@Labels.ReceiptReportItems</div>
            <div class="actions">
                <a href="javascript:;" class="btn btn-xs btn-circle blue-steel" id="btn_add_item">
                    <i class="fa fa-plus"></i> @Labels.AddItem
                </a>
            </div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-condensed">
                <thead id="thead_attendee">
                    <tr>
                        <th>@Labels.Unit</th>
                        <th>Product Name</th>
                        <th>Group Name</th>
                        <th>Category Name</th>
                        <th>Product Size</th>
                        <th>Product Origin</th>
                        <th>Product Brand</th>
                        <th>Unit Price</th>
                        <th>Total Price</th>
                        <th>@Labels.Remarks</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="tbody_item">
                    @{
                        int index = 0;
                        if (Model.NondurableStockInItems != null)
                        {
                            foreach (var item in Model.NondurableStockInItems)
                            {
                            <tr>
                                <td>@item.UnitName</td>
                                <td>@item.ProductName</td>
                                <td>@item.GroupName</td>
                                <td>@item.CategoryName</td>
                                <td>@item.SizeName</td>
                                <td>@item.OriginName</td>
                                <td>@item.BrandName</td>
                                <td>@item.UnitPrice</td>
                                <td>@(item.UnitPrice * item.Quantity)</td>
                                <td>@item.Remarks</td>
                                <td>
                                    <a href="javascript:;" class="btn btn-xs btn-info item_edit" data-index="@index"><i class="fa fa-edit"></i></a>
                                    <a href="javascript:;" class="btn btn-xs btn-danger item_delete" data-index="@index" data-title="@Labels.are_you_sure" data-btn-ok-label="@Labels.yes" data-btn-cancel-label="@Labels.no"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                                index++;
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 form-group">
            <label>@Labels.Details</label>
            <div class="col-md-10">
                <textarea type="text" name="Details" id="Details" class="form-control" required data-msg="" placeholder="">@Model.Details</textarea>
            </div>
        </div>
    </div>
    <section class="row">
        <div class="col-md-5">
            <button type="submit" class="btn btn-sm blue" id="btn_submit">@Labels.save</button>
            <button type="submit" id="btnReset" class="btn btn-sm">@Labels.reset</button>
        </div>
    </section>
</form>

<form id="item_form" method="post" action="" autocomplete="off">
    <div class="modal fade" id="item_modal" tabindex="-1" data-backdrop="static">
        <div class="modal-dialog" style="width:60%;">
            <div class="modal-content">
                <div class="modal-header" style="background-color:#67809F; padding-top:8px; padding-bottom:8px; color:white;">
                    <button type="button" class="close red" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">@Labels.AddItem</h4>
                </div>
                <div class="modal-body">
                    <section class="row">
                        <div class=" col-md-6 form-group">
                            <label>Product Group</label>
                            <div class="col-md-8">
                                 @Html.DropDownList("GroupID", ViewBag.ProductGroupDrp as SelectList, Labels.please_select, new { @class = "form-control input-sm", @ID = "GroupID", @Required = "required" })
                            </div>
                        </div>
                        <div class=" col-md-6 form-group">
                            <label>Product Category</label>
                            <div class="col-md-8">
                                <select id="CategoryID" name="CategoryID" class="form-control input-sm"></select>
                            </div>
                        </div>
                    </section>
                    <div class="row">
                        <section class="row">
                            <div class="col-md-6 form-group">
                                <label>Product Name</label>
                                <div class="col-md-8">
                                    <input type="text" name="ProductName" id="ProductName" class="form-control input-sm" required data-msg="" placeholder="">
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Product Code</label>
                                <div class="col-md-8">
                                    <input type="text" name="ProductCode" id="ProductCode" class="form-control input-sm" data-msg="" placeholder="">
                                </div>
                            </div>
                        </section>
                        <section class="row">
                            <div class=" col-md-6 form-group">
                                <label>Unit</label>
                                <div class="col-md-8">
                                    @Html.DropDownList("UnitID", ViewBag.UnitDrp as SelectList, Labels.please_select, new { @class = "form-control input-sm", @Required = "required", @ID = "UnitID" })
                                </div>
                            </div>
                            <div class=" col-md-6 form-group">
                                <label>Product Size</label>
                                <div class="col-md-8">
                                    @Html.DropDownList("SizeID", ViewBag.SizeDrp as SelectList, Labels.please_select, new { @class = "form-control input-sm", @ID = "SizeID" })
                                </div>
                            </div>
                        </section>
                        <section class="row">
                            
                        </section>
                        <section class="row">
                            <div class=" col-md-6 form-group">
                                <label>Product Origin</label>
                                <div class="col-md-8">
                                     @Html.DropDownList("OriginID", ViewBag.OriginDrp as SelectList, Labels.please_select, new { @class = "form-control input-sm", @ID = "OriginID" })
                                </div>
                            </div>
                            <div class=" col-md-6 form-group">
                                <label>Product Brand</label>
                                <div class="col-md-8">
                                     @Html.DropDownList("BrandID", ViewBag.BrandDrp as SelectList, Labels.please_select, new { @class = "form-control input-sm", @ID = "BrandID" })
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Quantity</label>
                            <div class="col-md-8">
                                <input type="number" name="Quantity" id="Quantity" class="form-control input-sm" required data-rule-digits="true" data-msg="" />
                            </div>
                        </div>
                        <div class="col-md-6 form-group">
                            <label> Unit Price</label>
                            <div class="col-md-8">
                                <input type="number" name="UnitPrice" id="UnitPrice" class="form-control input-sm" required data-rule-digits="true" data-msg="" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label>@Labels.Remarks</label>
                            <div class="col-md-10">
                                <textarea type="text" name="Remarks" id="Remarks" class="form-control" data-msg="" placeholder=""></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn green btn-sm">@Labels.save</button>
                    <button type="button" class="btn default btn-sm" data-dismiss="modal">@Labels.cancel</button>
                    <button type="reset" id="btnResetModal" class="btn btn-sm">@Labels.reset</button>
                    <input type="hidden" id="index" name="index" value="-1">
                    <input type="hidden" name="ID" value="0">
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts{
    @*<link href="~/Content/css/select2.min.css" rel="stylesheet" />*@
    @*<script src="~/Scripts/select2.min.js"></script>*@
    <script type="text/html" id="temp_item">
        <tr>
            <td>{{UnitName}}</td>
            <td>{{ProductName}}</td>
            <td>{{GroupName}}</td>
            <td>{{CategoryName}}</td>
            <td>{{SizeName}}</td>
            <td>{{OriginName}}</td>
            <td>{{BrandName}}</td>
            <td>{{UnitPrice}}</td>
            <td>{{TotalPrice}}</td>
            <td>{{Remarks}}</td>
            <td>
                <a href="javascript:;" class="btn btn-xs btn-info item_edit" data-index="{{index}}"><i class="fa fa-edit"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-danger item_delete" data-index="{{index}}" data-title="@Labels.are_you_sure" data-btn-ok-label="@Labels.yes" data-btn-cancel-label="@Labels.no"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
    </script>
    <script>
        var model = @Html.Raw(Json.Encode(Model));
        $(function () {
            var NondurableStockInItems = [];
            var StockInID = '@Model.StockInID';
            if (StockInID != '0') {
                //var model = JSON.parse($("#model_json").val());
                NondurableStockInItems = model.NondurableStockInItems;
                $("#CategoryID").trigger("change");
            }
           
            console.log("StockInItems >>>>>>>>>>>>>>>> "+JSON.stringify(NondurableStockInItems));
            //Load Product Information
            @*$('#ProductCode').change(function () {
                var productCode = $(this).val();
                $.ajax({
                    type: "post",
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    url: '@Url.Action("LoadProductInfo", "Helper")', // URL to fetch second ddl
                    data: "{productCode:'" + productCode + "'}",
                    success: function (data) {
                        $("#ProductSize").val(data.ProductSize);
                        $("#ProductCategory").val(data.ProductCategory);
                        $("#ProductGroup").val(data.ProductGroup);
                        $("#ProductOrigin").val(data.ProductOrigin);
                        $("#UnitName").val(data.UnitName);
                    },
                    failure: function (data) {
                        alert('error occured');
                    }
                });
            });*@

            // FORM VALIDATION AND SUBMISSION
            $('#main_form').validate({
                submitHandler: function (form) {
                    var data = $('#main_form').serializeJSON({
                        parseAll: true,
                        useIntKeysAsArrayIndex: true,
                    });
                    data['NondurableStockInItems'] = NondurableStockInItems.filter(function (obj) { return obj != null; });
                    if (data['NondurableStockInItems'].length == 0) {
                        toastr.error('Please Add Item');
                        return;
                    }
                    var formData = ObjectToFormData(data);

                    console.log("form data is >>>>>>>> "+ JSON.stringify(formData));
                    //******************
                    Metronic.blockUI({ animate: true });
                    $.ajax({
                        url: $('#main_form').attr('action'),
                        type: 'POST',
                        data: formData,
                        processData: false,
                        contentType: false,
                        success: function (response) {
                            if (response != false) {
                                saveImage(response);
                                console.log("response received >>>>>>>>>><<<<<<");

                            } else {
                                toastr.error('@Labels.unable_to_update');
                            }
                        }
                        
                    })
                }
            })

            $('body').on('click', '#btn_add_item', function (e) {
                e.preventDefault();
                $('#item_modal').modal('show');
                $('#item_form').clearForm();
                $('#item_form [name=ID]').val('0');
                $('#item_form [name=index]').val('-1');
            })

            $('body').on('click', '.item_edit', function (e) {
                e.preventDefault();
                var index = $(this).data().index;
                var row = NondurableStockInItems[index];
                console.log("row is >>>>>>>>>>>>>"+ JSON.stringify(row));
                $('#item_form [name=UnitID]').val(row.UnitID);
                $('#item_form [name=ItemDetails]').val(row.ItemDetails);
                $('#item_form [name=Price]').val(row.Price);
                $('#item_form [name=Remarks]').val(row.Remarks);
                $('#item_form [name=ID]').val(row.ID);
                //loadProducts(row.ProductCode);

                $('#item_form [name=SizeID]').val(row.SizeID);
                $('#item_form [name=CategoryID]').val(row.CategoryID);
                $('#item_form [name=GroupID]').val(row.GroupID);
                $('#item_form [name=OriginID]').val(row.OriginID);
                $('#item_form [name=BrandID]').val(row.BrandID);
                $('#item_form [name=ProductName]').val(row.ProductName);

                $('#item_form [name=index]').val(index);
                $('#item_modal').modal('show');

            })

            $('#item_form').validate({
                submitHandler: function (form) {
                    var isDuplicate = false;
                    NondurableStockInItems.forEach(function(i){
                        console.log("Product code textbox value is >>>>>>> "+$('#ProductName').val());
                        console.log("Product code value is >>>>>>> "+i.ProductName);
                        if($('#ProductName').val() && (i.ProductName === $('#ProductName').val())){
                            console.log("Inside the product Name >>>>"+i.ProductName);
                            isDuplicate = true;
                            return;
                        }
                    })
                    if(isDuplicate && $('#index').val() === "-1"){
                        toastr.error("Duplicate Product");
                        return;
                    }
                    var row = $(form).serializeJSON();
                    console.log("form data is >>>>>>>>>>>>>> "+JSON.stringify(row));
                    var _index = (row.index == -1) ? NondurableStockInItems.length : row.index;

                    var tr = $('#temp_item').clone().html()
                    .replace("{{Quantity}}", row.Quantity)
                    .replace("{{UnitName}}", $('#item_form [name=UnitID] option:selected').text())
                    .replace("{{ProductName}}",row.ProductName)
                    //.replace("{{ProductName}}",$('#item_form [name=ProductCode] option:selected').text())
                    .replace("{{GroupName}}",$('#item_form [name=GroupID] option:selected').text())
                    .replace("{{CategoryName}}",$('#item_form [name=CategoryID] option:selected').text())
                    .replace("{{SizeName}}",$('#item_form [name=SizeID] option:selected').text())
                    .replace("{{OriginName}}",$('#item_form [name=OriginID] option:selected').text())
                    .replace("{{BrandName}}",$('#item_form [name=BrandID] option:selected').text())
                    
                    .replace("{{UnitPrice}}", row.UnitPrice)
                    .replace("{{TotalPrice}}", row.UnitPrice * row.Quantity)
                    .replace("{{Remarks}}", row.Remarks)
                    .replace("{{index}}", _index);
                    if (row.index == -1) {
                        $('#tbody_item').append(tr);
                        $('#item_form').clearForm();
                        $('#item_form input:first').focus();
                        NondurableStockInItems.push(row);
                    } else {
                        $('#tbody_item').find('[data-index=' + row.index + ']').closest('tr').replaceWith(tr);
                        $('#item_modal').modal('hide');
                        NondurableStockInItems[row.index] = row;
                    }
                }
            })

            $('body').on('click', '.item_delete', function (e) {
                e.preventDefault()
                $(this).confirmation('show');
            })

            $('body').on('confirmed.bs.confirmation', '.item_delete', function (e) {
                var index = $(this).data().index;
                NondurableStockInItems[index] = null;
                $(this).closest('tr').remove();
            })

            //$('#ProductCode').select2({
            //    dropdownParent: $('#item_modal'),
            //    theme: "bootstrap",
            //    placeholder: "Select a product code",
            //    width: null,
            //    containerCssClass: ':all:'
            //} );
            $("#GroupID").change(function(){
                var groupID = $(this).val()
                if (groupID) {
                    $.ajax({
                        type: "post",
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        url: '@Url.Action("CategoryAjax", "LookupHelper")', // URL to fetch second ddl
                        data: "{id:'" + groupID + "'}",
                        success: function (data) {
                            $('#CategoryID').empty();
                            $('#CategoryID').append('<option selected="selected" value="">'+"@Labels.please_select"+'</option>');
                            $.each(data, function (i, d) {
                                $('#CategoryID').append('<option value=' + d.Value + '>' + d.Text + '</option>');
                                if(data.length == i+1){
                                    var index =  $('#item_form [name=index]').val();
                                    if(index && index != "-1"){
                                        $('#CategoryID').val(NondurableStockInItems[index]['CategoryID']);
                                    }
                                
                                }
                            });
                        },
                        failure: function (data) {
                            alert('error occured');
                        },
                        complete: function(data) {

                        }
                    });
                }
            });
    })
    </script>
    <script>
        function saveImage(recordId){
            console.log("Inside the save image >>>>>"+recordId);
            //setTimeout(function(){
            //    console.log("Inside the timeout ");
            //},6000)

                if($("#FileContent").val()){
                    var file = $("#FileContent")[0].files[0];
                        var imageData = new FormData();
                        imageData.append('RecordID', recordId);
                        imageData.append('FileContent', file);
                        $.ajax({
                            url: 'SaveScanImage',
                            type: 'POST',
                            data: imageData,
                            contentType: false,
                            processData: false,
                            success: function(response){
                                if(response != false){
                                    bootbox.alert('@Labels.operation_done_suc', function () {
                                        window.location.href = '@Url.Action("View")/' + recordId;
                                    })
                                }
                                else{
                                    toastr.error('Unable to upload image');
                                    window.location.href = '@Url.Action("View")/' + recordId;
                                }
                            },
                            complete: function () {
                                console.log("Inside the complete ");
                                Metronic.unblockUI();
                            }
                        });
                }else{
                    Metronic.unblockUI();
                    bootbox.alert('@Labels.operation_done_suc', function () {
                        window.location.href = '@Url.Action("View")/' + recordId;
                    })
                    console.log("file content do not have value");
                }
        }
        
    </script>
}


