@{
    //ViewBag.Title = ;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var search = ViewBag.search as Inventory.Models.ViewModels.ProductSearch;
    var _user = ViewBag.AppUser as Inventory.Models.ViewModels.UserWithRole;
    var _canView = _user.HasAccess("DistributionTicketPC5", "View");
}
<div class="margin-bottom-10 row">
    <div class="col-md-offset-10">
        <a href='@Url.Action("ProductAdd")' class="btn blue"><i class="fa fa-plus-circle"></i>@Labels.AddNewRecord</a>
    </div>
</div>
<form method="post" action="@Url.Action("ListPartial")" id="search_form" autocomplete="off">
    <div class="portlet box blue-hoki" style="margin-bottom:10px">
        <div class="portlet-title">
            <div class="caption">@Labels.search_criteria</div>
            <div class="tools">
                <a href="javascript:;" class="collapse" data-original-title="" title=""></a>
            </div>
        </div>
        <div class="portlet-body">
            <section class="row">
                <div class=" col-md-6 form-group">
                    <label>Usage Type</label>
                    <div class="col-md-8">
                        @Html.DropDownList("UsageTypeID", ViewBag.UsageTypeDrp as SelectList, Labels.please_select, new { @class = "form-control input-sm", @ID = "UsageTypeID" })
                    </div>
                </div>
                <div class="col-md-6 form-group">
                    <label>Prodcut Name</label>
                    <div class="col-md-8">
                        <input type="text" class="form-control input-sm" name="ProductName" value="@search.ProductName" placeholder="Product Name" id="ProductName" />
                    </div>
                </div>
            </section>
            <section class="row">
                <div class=" col-md-6 form-group">
                    <label>Product Group</label>
                    <div class="col-md-8">
                        @Html.DropDownList("GroupID", ViewBag.GroupDrp as SelectList, Labels.please_select, new {@class = "form-control input-sm", @ID = "GroupID"})
                    </div>
                </div>
                <div class=" col-md-6 form-group">
                    <label>Product Category</label>
                    <div class="col-md-8">
                        <select id="CategoryID" name="CategoryID" class="form-control"></select>
                    </div>
                </div>

            </section>
            <div class="row">
                <div class="col-md-8">
                    <button type="submit" id="btnSearch" class="btn btn-sm green"><i class="fa fa-search"></i> @Labels.search</button>
                    <button type="submit" id="btnReset" class="btn btn-sm">@Labels.reset</button>
                </div>
                <div class="col-md-2">
                    <select name="PageSize" class="form-control input-sm pull-right" style="width:70px" id="drpLimit">
                        <option value="10" @(search.length == 10 ? "selected" : "")>10</option>
                        <option value="20" @(search.length == 20 ? "selected" : "")>20</option>
                        <option value="50" @(search.length == 50 ? "selected" : "")>50</option>
                    </select>
                    <input type="hidden" name="hdStart" id="StartRow" value="@search.start" />
                </div>
            </div>
        </div>
    </div>
</form>

<div class="portlet box blue-hoki">
    <div class="portlet-title">
        <div class="caption">
            Products
        </div>
        <div class="actions" id="data_table_actions">
        </div>
    </div>
    <div class="portlet-body" id="list_div" style="overflow:auto">
        <table id="data_table" style="width:100%" class="table table-striped table-condensed table-hover">
            <thead>
                <tr>
                    <th>Usage type</th>
                    <th>Product Name</th>
                    <th>Bar Code</th>
                    <th>Product Group</th>
                    <th>Product Category</th>
                    <th>@Labels.Unit</th>
                    <th>Packing</th>
                    <th>Size</th>
                    <th>Origin Name</th>
                    <th>Brand</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div id="popup_record" class="modal fade" tabindex="-1" data-backdrop="static">
    <div class="modal-dialog" style="width:80%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Product Information</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <section class="col-md-8">
                        <section class="row">
                            <div class=" col-md-6 form-group">
                                <label>Usage Type</label>
                                <div class="col-md-8">
                                    <label class="form-control" id="UsageTypeName"></label>
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Product Name</label>
                                <div class="col-md-8">
                                    <label class="form-control" id="ProductName"></label>
                                </div>
                            </div>
                        </section>
                        <section class="row">
                            <div class="col-md-6 form-group">
                                <label>Product Code</label>
                                <div class="col-md-8">
                                    <label class="form-control" id="SerialCodeNumber"></label>
                                </div>
                            </div>
                            <div class=" col-md-6 form-group">
                                <label>Unit</label>
                                <div class="col-md-8">
                                    <label class="form-control" id="UnitName"></label>
                                </div>
                            </div>
                        </section>
                        <section class="row">
                            <div class=" col-md-6 form-group">
                                <label>Product Group</label>
                                <div class="col-md-8">
                                    <label class="form-control" id="GroupName"></label>
                                </div>
                            </div>
                            <div class=" col-md-6 form-group">
                                <label>Product Category</label>
                                <div class="col-md-8">
                                    <label class="form-control" id="CategoryName"></label>
                                </div>
                            </div>
                        </section>
                        <section class="row">
                            <div class=" col-md-6 form-group">
                                <label>Product Packing</label>
                                <div class="col-md-8">
                                    <label class="form-control" id="PackingName"></label>
                                </div>
                            </div>
                            <div class=" col-md-6 form-group">
                                <label>Product Size</label>
                                <div class="col-md-8">
                                    <label class="form-control" id="SizeName"></label>
                                </div>
                            </div>
                        </section>
                        <section class="row">
                            <div class=" col-md-6 form-group">
                                <label>Product Origin</label>
                                <div class="col-md-8">
                                    <label class="form-control" id="OriginName"></label>
                                </div>
                            </div>
                            <div class=" col-md-6 form-group">
                                <label>Product Brand</label>
                                <div class="col-md-8">
                                    <label class="form-control" id="BrandName"></label>
                                </div>
                            </div>
                        </section>
                        <section class="row">
                            <div class="col-md-12 form-group">
                                <label>Description</label>
                                <div class="col-md-10">
                                    <label class="form-control" id="Description"></label>
                                </div>
                            </div>
                        </section>
                    </section>
                    <section class="col-md-4">
                        <section class="row" style="">
                            <div class="col-md-12 form-group" style="height:300px">
                                <img id="ImagePath" class="img-thumbnail rounded" src="" style="width:100%; height:100%; object-fit: cover;" alt="Product Image" />
                            </div>
                        </section>
                    </section>

                </div>
                <div class="form-actions right">
                    <button type="button" class="btn default" data-dismiss="modal">@Labels.cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
<script>
    var model = @Html.Raw(Json.Encode(Model));
    $(function () {
        $("#GroupID").change(function(){
            var groupID = $(this).val();
            if (groupID) {
                $.ajax({
                    type: "post",
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    url: '@Url.Action("CategoryAjax", "LookupHelper")', // URL to fetch second ddl
                    data: "{id:'" + groupID + "'}",
                    success: function (data) {
                        $('#CategoryID').empty();
                        $('#CategoryID').append('<option selected="selected" value="">' + "@Labels.please_select" + '</option>');
                        $.each(data, function (i, d) {
                            $('#CategoryID').append('<option value=' + d.Value + '>' + d.Text + '</option>');
                        });
                    },
                    failure: function (data) {
                        alert('error occured');
                    }
                });
            }
        })

            $("#record_form").validate({
                submitHandler: function () {
                    $("#record_form").ajaxSubmit({
                        beforeSubmit: function(){
                            $('#btn_submit').button('loading');
                        },
                        success: function (response) {
                            if (response != false) {
                                toastr.success("@Labels.operation_done_suc");
                                data_table.ajax.reload();
                            } else {
                                toastr.error("@Labels.unable_to_update");
                            }
                        },
                        error: function(){
                            toastr.error("@Labels.unable_to_update");
                        },
                        complete: function () {
                            $('#popup_record').modal('hide');
                            $('#btn_submit').button('reset');
                            setDefaultValue();
                            $('#ID').button(0);
                        }
                    })
                }
            })

            /////////////////////////SEARCH//////////////////////////////
            var canView = @Html.Raw(Json.Encode(_canView));

            $.fn.dataTable.ext.errMode = 'none';
            var data_table = $('#data_table').DataTable({
                ajax: {
                    url: '@Url.Action("ListProduct")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: function (data) {
                        var form_data = $('#search_form').serializeJSON();
                        form_data['draw'] = data.draw;
                        form_data['start'] = data.start;
                        form_data['length'] = data.length;
                        return JSON.stringify(form_data);
                    },
                },
                columns: [
                     { data: 'UsageType' },
                    { data: 'ProductName' },
                    { data: 'BarCode' },
                    { data: 'Group' },
                    { data: 'Category' },
                    { data: 'Unit' },
                    { data: 'Packing' },
                    { data: 'Size' },
                    { data: 'Origin' },
                    { data: 'Brand' },
                    {
                        data: null,
                        render: function (row) {
                            return `<a href='@Url.Action("ProductEdit")/${row.ProductID}' data-toggle="modal" class="btn btn-xs blue edit_row" title="@Labels.edit"><i class="fa fa-edit"></i></a>`;
                        }
                    },
                    {
                        data: null,
                        render: function (row) {
                            return '<button data-toggle="modal" class="btn btn-xs red delete_row" data-id="' + row.ProductID + '" title="@Labels.delete"><i class="fa fa-trash"></i></button>';
                        }
                    },
                    {
                        data: null,
                        render: function (row) {
                            return '<button class="btn btn-xs green view_row" data-id="' + row.ProductID + '" title="@Labels.View"><i class="fa fa-eye"></i></button>';
                        }
                    }
                ],
                searching: false,
                bInfo: false,
                bLengthChange: false,
                ordering: false,
                serverSide: true,
                pageLength: $('#drpLimit').val(),
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'copyHtml5',
                        text: '<li class="fa fa-clipboard"></li> Copy',
                    },
                    {
                        extend: 'excelHtml5',
                        text: '<li class="fa fa-file-excel-o"></li> Excel',
                    },
                    {
                        extend: 'print',
                        text: '<li class="fa fa-print"></li> Print',
                    },
                ],
            });
            data_table.buttons().container().appendTo('#data_table_actions');

            $('#data_table').on('processing.dt', function (e, s, p) {
                if (p == true) {
                    Metronic.blockUI({
                        target: '#list_div',
                        animate: true
                    });
                } else {
                    Metronic.unblockUI('#list_div');
                }
            })

            $('#search_form').submit(function (e, param) {
                e.preventDefault();
                data_table.ajax.reload();
            })

            $('#btnReset').click(function (e) {
                e.preventDefault();
                $('#search_form').clearForm();
                data_table.ajax.reload();
            })

            $('#drpLimit').change(function () {
                data_table.page.len($(this).val()).draw();
            })

        ////////////////////////////////////////////////////

            $("body").on("click", ".delete_row", function (e) {
                e.preventDefault();
                var id = $(this).data().id;
                var url = "@Url.Action("ProductDelete")/" + id;
                bootbox.confirm("@Labels.are_you_sure", function (result) {
                    if (result == true) {
                        $.get(url, function (response) {
                            if (response == true) {
                                toastr.success("@Labels.operation_done_suc");
                                data_table.ajax.reload();
                            }
                        })
                    }
                })
            })
            $("body").on("click", ".view_row", function (e) {
                e.preventDefault();
                var id = $(this).data().id;
                var url = "@Url.Action("ProductGet")/" + id;
                $.get(url, function (response) {
                    $("#UsageTypeName").text(response.UsageTypeName);
                    $("#ProductName").text(response.ProductName);
                    $("#ProductCode").text(response.ProductCode);
                    $("#UnitName").text(response.UnitName);
                    $("#GroupName").text(response.GroupName);
                    $("#CategoryName").text(response.CategoryName);
                    $("#PackingName").text(response.PackingName);
                    $("#SizeName").text(response.SizeName);
                    $("#OriginName").text(response.OriginName);
                    $("#BrandName").text(response.BrandName);
                    $("#Description").text(response.Description);
                    $('#ImagePath'). attr("src",response.ImagePath);
                    $('#popup_record').modal('show');
                    console.log(JSON.stringify(response));
                })
            })

    })
</script>
}


