@model Inventory.Models.Tables.MobileCarTicket
@{
    var search = ViewBag.search as Inventory.Models.ViewModels.MobileCarTicket_Search;
    var _user = ViewBag.AppUser as Inventory.Models.ViewModels.UserWithRole;
    var _canEdit = _user.HasAccess("MobileCarTicket", "Edit");
    var _canDelete = _user.HasAccess("MobileCarTicket", "Delete");
    var _canPrint = _user.HasAccess("MobileCarTicket", "Print");
    var _canView = _user.HasAccess("MobileCarTicket", "View");
    ViewBag.Title = "Mobile Car Ticket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="margin-bottom-10">
    @if (_user.HasAccess("MobileCarTicket", "Add"))
    {
        <a href="#popup_record" data-toggle="modal" class="btn blue btn-sm"><i class="fa fa-plus-circle"></i>@Labels.AddNewRecord</a>
    }
</div>

<div class="portlet box blue-hoki margin-bottom-10">
    <div class="portlet-title">
        <div class="caption">
            @Labels.search_criteria
        </div>
    </div>
    <div class="portlet-body">
        <form id="search_form" autocomplete="off">
            <section class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Ticket ID</label>
                        <input type="number" class="form-control input-sm" name="sMobileCarTicketID" value="@search.sMobileCarTicketID" placeholder="Mobile Car Ticket ID" id="sMobileCarTicketID" />
                    </div>
                </div>
                <div class=" col-md-3">
                    <div class="form-group">
                        <label>@Labels.Department</label>
                        @Html.DropDownList("sDepartmentID", ViewBag.DepartmentDrp as SelectList, Labels.please_select, new { @class = "form-control input-sm", @ID = "sDepartmentID" })
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Person Assigned Name</label>
                        <input type="text" class="form-control input-sm" name="sPersAssignedName" value="@search.sPersAssignedName" placeholder="Person Assigned Name" id="sPersAssignedName" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Person Assign Occupation</label>
                        <input type="text" class="form-control input-sm" name="sPersAssignedOccupation" value="@search.sPersAssignedOccupation" placeholder="Person Assign For" id="sPersAssignedFor" />
                    </div>
                </div>
            </section>
            <section class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Visisting Place</label>
                        <input type="text" class="form-control input-sm" name="sVisitingPlace" value="@search.sVisitingPlace" placeholder="Visiting Place" id="sVisitingPlace" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Visisting Purpose</label>
                        <input type="text" class="form-control input-sm" name="sVisitingPurpose" value="@search.sVisitingPurpose" placeholder="Visiting Purpose" id="sVisitingPurpose" />
                    </div>
                </div>
                <div class="col-md-6 form-group">
                    <label>Visiting Date</label>
                    <div class="input-group">
                        <input type="text" class="form-control input-sm shpicker" name="DateFrom" value="@search.DateFrom" placeholder="@Labels.FromDate" data-rule-date="true" data-msg="" />
                        <span class="input-group-addon input-sm">@Labels.ToDate</span>
                        <input type="text" class="form-control input-sm shpicker" name="DateTo" value="@search.DateTo" placeholder="@Labels.ToDate" data-rule-date="true" data-msg="" />
                    </div>
                </div>
            </section>
            <section class="row">
                <div class="col-md-2 col-md-offset-10">
                    <div class="form-group">
                        <label>@Labels.RecordsPerPage</label>
                        <select name="PageSize" class="form-control input-sm pull-right" id="drpLimit">
                            <option value="10" @(search.length == 10 ? "selected" : "")>10</option>
                            <option value="20" @(search.length == 20 ? "selected" : "")>20</option>
                            <option value="50" @(search.length == 50 ? "selected" : "")>50</option>
                        </select>
                    </div>
                    <input type="hidden" name="hdStart" id="StartRow" value="@search.start" />
                </div>
                <div class="col-md-5">
                    <button type="submit" class="btn btn-sm blue"><i class="fa fa-search"></i> @Labels.search</button>
                    <button type="submit" id="btnReset" class="btn btn-sm">@Labels.reset</button>
                </div>
            </section>
        </form>
    </div>
</div>

<div class="portlet box blue-hoki">
    <div class="portlet-title">
        <div class="caption">
            Mobile Car Tickets
        </div>
        <div class="actions" id="data_table_actions">
        </div>
    </div>
    <div class="portlet-body" id="list_div" style="overflow:auto">
        <table class="table table-striped table-hover table-condensed" id="data_table">
            <thead>
                <tr>
                    <th>Ticket ID</th>
                    <th>@Labels.Department</th>
                    <th>Person Assigned Name</th>
                    <th>Person Assigned Occupation</th>
                    <th>Visiting Date</th>
                    <th>Visiting Purpose</th>
                    <th>Visiting Place</th>
                    <th>Visiting Time</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<form id="record_form" action="@Url.Action("Save")" method="post" autocomplete="off">
    <div class="modal fade" id="popup_record" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog" style="width:900px;">
            <div class="modal-content">
                <div class="modal-header">
                    Mobile Car Ticket
                </div>
                <div class="modal-body">
                    <section class="row">
                        <div class=" col-md-6">
                            <div class="form-group">
                                <label>@Labels.Department</label>
                                @Html.DropDownList("DepartmentID", ViewBag.DepartmentDrp as SelectList, Labels.please_select, new { @class = "form-control input-sm", @ID = "DepartmentID" })
                            </div>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Person Assigned Name</label>
                            <input type="text" name="PersAssignedName" id="PersAssignedName" class="form-control input-sm" required data-msg="" placeholder="">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Person Assigned Occupation</label>
                            <input type="text" name="PersAssignedOccupation" id="PersAssignedOccupation" class="form-control input-sm" required data-msg="" placeholder="">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Visiting Date</label>
                            <input type="text" name="VisitingDateForm" id="VisitingDateForm" value="@Model.VisitingDateForm" class="form-control input-sm shpicker_f" required data-msg="" placeholder="">
                        </div>
                    </section>
                    <section class="row">
                        <div class="col-md-6 form-group">
                            <label>Visiting Place</label>
                            <input type="text" name="VisitingPlace" id="VisitingPlace" class="form-control input-sm" required data-msg="" placeholder="">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Visiting Time</label>
                            <input type="text" name="VisistingTime" id="VisistingTime" class="form-control input-sm shTimepicker_f" required data-msg="" placeholder="">
                        </div>
                    </section>
                    <section class="row">
                        <div class="col-md-12 form-group">
                            <label>Visiting Purpose</label>
                            <textarea type="text" name="VisitingPurpose" id="VisitingPurpose" class="form-control" required data-msg="" placeholder="Visiting Purpose"></textarea>
                        </div>
                    </section>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-sm blue" id="btn_submit">@Labels.save</button>
                    <button type="button" class="btn btn-sm default" id="btn_cancel" data-dismiss="modal">@Labels.cancel</button>
                    <input type="hidden" name="MobileCarTicketID" id="MobileCarTicketID" value="0" />
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts{
<script>
    var model = @Html.Raw(Json.Encode(Model));
    $(function () {
            $("#record_form").validate({
                submitHandler: function () {
                    $("#record_form").ajaxSubmit({
                        beforeSubmit: function(){
                            $('#btn_submit').button('loading');
                        },
                        success: function (response) {
                            if (response != false) {
                                toastr.success("@Labels.operation_done_suc");
                                data_table.ajax.reload();
                            } else {
                                toastr.error("@Labels.unable_to_update");
                            }
                        },
                        error: function(){
                            toastr.error("@Labels.unable_to_update");
                        },
                        complete: function () {
                            $('#popup_record').modal('hide');
                            $('#btn_submit').button('reset');
                           // $('#MobileCarTicketID').button(0);
                        }
                    })
                }
            })

        /////////////////////////SEARCH//////////////////////////////
            var canView = @Html.Raw(Json.Encode(_canView));
            var canEdit = @Html.Raw(Json.Encode(_canEdit));
            var canDelete = @Html.Raw(Json.Encode(_canDelete));
            var canPrint = @Html.Raw(Json.Encode(_canPrint));

            $.fn.dataTable.ext.errMode = 'none';
            var data_table = $('#data_table').DataTable({
                ajax: {
                    url: '@Url.Action("MobileCarTicketPartialList")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: function (data) {
                        var form_data = $('#search_form').serializeJSON();
                        form_data['draw'] = data.draw;
                        form_data['start'] = data.start;
                        form_data['length'] = data.length;
                        return JSON.stringify(form_data);
                    },
                },
                columns: [
                    { data: 'MobileCarTicketID' },
                    { data: 'PersAssignedName' },
                    { data: 'PersAssignedOccupation' },
                    { data: 'VisitingDate' },
                    { data: 'VisitingPlace' },
                    { data: 'VisistingTime' },
                    { data: 'VisitingPurpose' },
                    { data: 'DepartmentName' },
                    {
                        data: null,
                        visible: canEdit,
                        render: function (row) {
                            return '<a href="#popup_record" data-toggle="modal" class="btn btn-xs blue edit_row" data-id="' + row.MobileCarTicketID + '" ><i class="fa fa-edit"></i></a>';
                        }
                    },
                    {
                        data: null,
                        visible: canDelete,
                        render: function (row) {
                            return '<button data-toggle="modal" class="btn btn-xs red delete_row" data-id="' + row.MobileCarTicketID + '"><i class="fa fa-trash"></i></button>';
                        }
                    }
                ],
                searching: false,
                bInfo: false,
                bLengthChange: false,
                ordering: false,
                serverSide: true,
                pageLength: $('#drpLimit').val(),
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'copyHtml5',
                        text: '<li class="fa fa-clipboard"></li> Copy',
                    },
                    {
                        extend: 'excelHtml5',
                        text: '<li class="fa fa-file-excel-o"></li> Excel',
                    },
                    {
                        extend: 'print',
                        text: '<li class="fa fa-print"></li> Print',
                    },
                ],
            });
            data_table.buttons().container().appendTo('#data_table_actions');

            $('#data_table').on('processing.dt', function (e, s, p) {
                if (p == true) {
                    Metronic.blockUI({
                        target: '#list_div',
                        animate: true
                    });
                } else {
                    Metronic.unblockUI('#list_div');
                }
            })

            $('#search_form').submit(function (e, param) {
                e.preventDefault();
                data_table.ajax.reload();
            })

            $('#btnReset').click(function (e) {
                e.preventDefault();
                $('#search_form').clearForm();
                data_table.ajax.reload();
            })
            $('#btn_cancel').click(function (e) {
                e.preventDefault();
                $('#CurrentDistrict').empty();
            })

            $('#drpLimit').change(function () {
                data_table.page.len($(this).val()).draw();
            })

            ////////////////////////////////////////////////////

            $("body").on("click", ".edit_row", function (e) {
                e.preventDefault();
                var id = $(this).data().id;
                var url = "@Url.Action("MobileCarTicketRecord")/" + id;
                $.get(url, function (response) {
                    if (response != false) {
                        $("#record_form").find("input,select,hidden,textarea").each(function () {
                            var name = $(this).attr("name");
                            $(this).val(response[name]);
                        })
                    } else {
                        toastr.error("@Labels.unable_to_update");
                    }
                })
            })
            $("body").on("click", ".delete_row", function (e) {
                e.preventDefault();
                var id = $(this).data().id;
                var url = "@Url.Action("DeleteTicket")/" + id;
                bootbox.confirm("@Labels.are_you_sure", function (result) {
                    if (result == true) {
                        $.get(url, function (response) {
                            if (response == true) {
                                toastr.success("@Labels.operation_done_suc");
                                data_table.ajax.reload();
                            }
                        })
                    }
                })
            })

            $("#popup_record").on("hide.bs.modal", function (e) {
                $("#record_form").clearForm();
                $("#record_form").find("[name=EmployeeID]").val(0);
            })
            $("#popup_record").on('show.bs.modal', function () {
            });
    })
</script>
}

