@model Inventory.Models.ViewModels.Ticket_VM
@{
    ViewBag.Title = "تکت توزیع تحویلخانه";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var search = ViewBag.search as Inventory.Models.ViewModels.TicketSearch;
}

<table border="1" width="800" class="table table-striped table-condensed table-bordered">
    <caption> فورمه ف س (۵) </caption>
    <thead class="thead-light">
        <tr>
            <th colspan="2">۱- نمبر تکت</th>
            <td colspan="2">@Model.TicketNumber</td>
            <th colspan="1">۴- نمبر درخواست</th>
            <td colspan="2">@Model.RequestNumber</td>
        </tr>
        <tr>
            <th colspan="2">۲-تاریخ</th>
            <td colspan="2">@Model.TicketIssuedDateVM</td>
            <th colspan="1">۵-تاریخ</th>
            <td colspan="2">@Model.RequestDateVM</td>
        </tr>
        <tr>
            <th colspan="2">۳-تحویلخانه توزیع کننده </th>
            <td colspan="2">@Model.Warehouse</td>
            <th colspan="1">۶-شعبه درخواست کننده </th>
            <td colspan="2">@Model.Requester</td>
        </tr>
        <tr>
            <th align="center">مقدار </th>
            <th align="center">تبص ذخیره </th>
            <th colspan="2" style="text-align:center;"> تفصیــــــــــلات جنس </th>
            <th align="center"> قیمت واحد </th>
            <th align="center">قیمت مجموعی </th>
            <th align="center">معامله شده به حساب </th>
        </tr>
        <tr>
            <th>۷</th>
            <th>۸</th>
            <th colspan="2">۹</th>
            <th>۱۰</th>
            <th>۱۱</th>
            <th>۱۲</th>
        </tr>
    </thead>   
    <tbody>
        @foreach (var item in Model.TicketItems)
        {
            <tr>
                <td>@item.Quantity</td>
                <td>@item.UnitName</td>
                <td width="40%" colspan="2" style="text-align:center;">@item.ItemDetails</td>
                <td width="10%">@item.UnitPrice</td>
                <td>@item.TotalPrice</td>
                <td>@item.DealWithAccount</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td></td>
            <td></td>
            <th colspan="2" style="text-align:center;"> ۱۳- مجموع کل  </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        <tr>
            <td colspan="2">۱۴-امضاء آمر تحویلخانه</td>
            <td colspan="2"></td>
            <td colspan="2">۱۵-امضاء گیرنده</td>
            <td colspan="3"></td>
        </tr>
        <tr>
            <th colspan="5">۱۶-اندارج:تمام اجناس درکارت های ثبت ذخیره درج گریده است جنس</th>
            <td colspan="2"></td>
        </tr>
        <tr>
            <th colspan="2">امضاء</th>
            <td colspan="2"></td>
            <td colspan="1">تاریخ</td>
            <td colspan="2"></td>
        </tr>
        <tr>
            <th colspan="7">کاتب اندراج</th>
        </tr>
        <tr>
            <th colspan="7">توریع فورمه دریک اصل و دو کاپی ترتیب شود</th>
        </tr>
        <tr>
            <th colspan="7">الف اصل به درخواست کننده داده شود</th>
        </tr>
        <tr>
            <th colspan="3">امضاء ترتیب گننده</th>
            <th colspan="4"></th>
        </tr>
    </tfoot>
</table>